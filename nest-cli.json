{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestJS/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nestJS/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nestJS",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "cassandra": {
      "type": "library",
      "root": "libs/cassandra",
      "entryFile": "index",
      "sourceRoot": "libs/cassandra/src",
      "compilerOptions": {
        "tsConfigPath": "libs/cassandra/tsconfig.lib.json"
      }
    },
    "data-processor": {
      "type": "application",
      "root": "apps/data-processor",
      "entryFile": "main",
      "sourceRoot": "apps/data-processor/src",
      "compilerOptions": {
        "tsConfigPath": "apps/data-processor/tsconfig.app.json"
      }
    },
    "nestJS": {
      "type": "application",
      "root": "apps/nestJS",
      "entryFile": "main",
      "sourceRoot": "apps/nestJS/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestJS/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}